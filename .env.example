# ===========================================
# PC BUILDER ENVIRONMENT VARIABLES
# ===========================================

# ===== GENERAL SETTINGS =====
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=PC Builder
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===== ANALYTICS & TRACKING (Optional) =====
# Google Analytics
NEXT_PUBLIC_GA_ID=G_XXXXXXXXXX

# Vercel Analytics (automatic with Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =====  DATABASE (Optional - Future use) =====
# If you want to save configurations to database
DATABASE_URL=postgresql://user:password@localhost:5432/pcbuilder

# ===== API KEYS (Optional) =====
# For future APIs like price comparisons, component recommendations
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
API_SECRET_KEY=your_secret_key_here

# ===== BIG BANG PROXY (Optional) =====
# Cloudflare Worker proxy to bypass CORS/Cloudflare
BIGBANG_PROXY_URL=https://your-worker.your-subdomain.workers.dev
BIGBANG_PROXY_TOKEN=your_proxy_token

# ===== EMAIL SERVICE (Optional) =====
# For sending build configurations via email
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@pcbuilder.com

# Resend verified sender (required for sending to all emails)
RESEND_FROM=PC Builder <no-reply@yourdomain.com>

# ===== DISCORD WEBHOOK (Optional) =====
# For sharing builds to Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxx

# ===== SOCIAL SHARING (Optional) =====
# For social media integration
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourprofile
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourprofile
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/yourserver

# ===== PAYMENT GATEWAY (Optional - Future) =====
# Stripe for premium features
NEXT_PUBLIC_STRIPE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# ===== RATE LIMITING (Optional) =====
# To prevent API abuse
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===== DEBUGGING =====
DEBUG=false
LOG_LEVEL=info
