// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id                    String    @id @default(cuid())
  email                 String?   @unique
  emailVerified         DateTime?
  password              String?
  name                  String?
  image                 String?
  setupImage            String?   // User's PC setup image
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relations
  accounts              Account[]
  sessions              Session[]
  resetTokens           ResetToken[]
  tickets               Ticket[]
  messages              Message[]
  setups                Setup[]
  setupComments         SetupComment[]
  messageReactions       MessageReaction[]
  setupCommentReactions  SetupCommentReaction[]
  messageRatings         MessageRating[]
  setupCommentRatings    SetupCommentRating[]
  ticketRatings          TicketRating[]
  ticketClaps            TicketClap[]

  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Password reset tokens
model ResetToken {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@map("reset_tokens")
}

// Forum tickets
model Ticket {
  id        String    @id @default(cuid())
  title     String
  description String
  status    String    @default("open") // open, in-progress, closed
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  rating    Float     @default(0)
  claps     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  ratings   TicketRating[]
  clapsList TicketClap[]

  @@map("tickets")
}

// Live chat messages
model Message {
  id        String    @id @default(cuid())
  text      String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticketId  String
  ticket    Ticket    @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  likes     Int       @default(0)
  dislikes  Int       @default(0)
  setupImage String?   // URL to user's setup image
  rating    Float?    @default(0) // 0.0 to 10.0 rating
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  reactions MessageReaction[]
  ratings   MessageRating[]

  @@map("messages")
}

// PC Setups Gallery
model Setup {
  id          String    @id @default(cuid())
  title       String
  description String?
  image       String    // Base64 or URL to setup image
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments    SetupComment[]
  rating      Float     @default(0) // Average rating
  likes       Int       @default(0)
  dislikes    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("setups")
}

// Setup Comments
model SetupComment {
  id        String    @id @default(cuid())
  text      String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  setupId   String
  setup     Setup     @relation(fields: [setupId], references: [id], onDelete: Cascade)
  likes     Int       @default(0)
  dislikes  Int       @default(0)
  rating    Float?    @default(0) // Individual rating 0-10
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  reactions SetupCommentReaction[]
  ratings   SetupCommentRating[]

  @@map("setup_comments")
}

model MessageReaction {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  type      String
  createdAt DateTime @default(now())

  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@map("message_reactions")
}

model SetupCommentReaction {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  type      String
  createdAt DateTime @default(now())

  comment   SetupComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@map("setup_comment_reactions")
}

model MessageRating {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  rating    Float
  createdAt DateTime @default(now())

  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@map("message_ratings")
}

model SetupCommentRating {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  rating    Float
  createdAt DateTime @default(now())

  comment   SetupComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@map("setup_comment_ratings")
}

model TicketRating {
  id        String   @id @default(cuid())
  ticketId  String
  userId    String
  rating    Float
  createdAt DateTime @default(now())

  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
  @@map("ticket_ratings")
}

model TicketClap {
  id        String   @id @default(cuid())
  ticketId  String
  userId    String
  createdAt DateTime @default(now())

  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
  @@map("ticket_claps")
}
